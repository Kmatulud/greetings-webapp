<h1>Greeting</h1>

    <div class="content">
       <form action="/greetings" method="POST">
<div class="error">{{messages.error}}</div>

            <div class="form-and-greeting">
                <div class="textField">
                    <label for="yourName" class="enterName">Your Name :</label>
                    <input type="text" name="name" id="yourName" placeholder="Please enter your name">
                </div>
                <div class="radios">
                    <label for="Sepedi">Sepedi</label>
                    <input type="radio" name="language" value="Sepedi">
                    <label for="Isizulu">IsiZulu</label>
                    <input type="radio" name="language" value="Isizulu">
                    <label for="English">English</label>
                    <input type="radio" name="language" value="English">
                </div>
                <div class="greet-result">
                    <p class="greeting">{{getGreetMessage}}{{getTheName}}</p>
                </div>
                <div class="theButton">
                    <button type="submit" class="submit">Greet Me</button>
                </div>
       </form>
        </div>
        <span class="line"></span>

            <div class="counter-section">
            <a href="/greeted"><p>Greeted Users:
            </p></a>
            <span class="count">{{countGreetedNames}}</span>
            <button type="reset" id="reset">Reset</button>
        </div>

    </div>
    </div>
